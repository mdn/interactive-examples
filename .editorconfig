# Top-most EditorConfig file ?
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation
[*.{css,html,js,json,py,styl}]
indent_style = space
indent_size = 4

# Indentation for JS examples
[live-examples/**.js]
indent_size = 2
